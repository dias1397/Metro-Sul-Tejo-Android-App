<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.diasjoao.metrosultejo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.schedule.ScheduleActivity"
            android:exported="true" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.live.LiveActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".ui.activities.LiveActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.LineActivity"
            android:exported="false"
            android:label="@string/title_activity_line"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar" />
        <activity
            android:name=".ui.activities.LiveActivity3"
            android:exported="false"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar" />
        <activity
            android:name=".ui.activities.IntroActivity"
            android:theme="@style/AppTheme1.NoActionBar" />
        <activity
            android:name=".ui.activities.MenuActivityOld"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme1.NoActionBar" />
        <activity
            android:name=".ui.activities.LiveActivityOld"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme1.NoActionBar" />
        <activity
            android:name=".ui.activities.ScheduleActivity"
            android:configChanges="orientation"
            android:noHistory="true"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme1.NoActionBar" />
        <activity
            android:name=".ui.activities.MapActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme1.NoActionBar" />
        <activity
            android:name=".ui.activities.InfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="${ads_application_id}" />
    </application>

</manifest>